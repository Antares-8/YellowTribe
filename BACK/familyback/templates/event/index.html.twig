{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block header %}

   <div class="d-flex justify-content-between align-items-center nav_container">

    <div class="float-left text-center"><a href="{{ path('homepage') }}"><p class="logo_content"></p></a></div>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="right_nav-calendar">
            {# <div class="d-flex"> #}

                <p class="pl-2"><a href="{{ path('profile_index') }}" class="btn btn-outline-warning btn-lg btn_frontline" role="button"><i class="fas fa-user-alt"></i></a></p>

                <p class="pl-2"><a href="{{ path('calendar') }}" class="btn btn-outline-warning btn-lg btn_frontline" role="button"><i class="fas fa-calendar-alt"></i></a></p>

            {# </div> #}

            {# <div class="d-flex"> #}

                <p class="pl-2"><a href="{{ path('tribe') }}" class="btn btn-warning btn-lg btn_signup btn_frontline" role="button">{{ app.user.tribe }}</a></p>

                <p class="pl-2"><a href="{{ path('app_logout') }}" class="btn btn-outline-warning btn-lg btn_backline" role="button"><i class="fas fa-sign-out-alt"></i></a></p>

            {# </div> #}
        </div>
    {% endif %} 
    
</div>

{% endblock %}

{% block body %}

    {% if user.tribe is null %}

        <div id="root" tribe="null" user="{{user.id}}"></div>

    {% else %}

        <div id="root" tribe="{{ tribe.id }}" user="{{ user.id }}"></div>

    {% endif %}

{% endblock %}
