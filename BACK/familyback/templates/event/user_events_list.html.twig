{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block header %}

  <div class="pt-2 d-flex justify-content-between align-items-center nav_container">

    <div class="float-left text-center"><i class="fas fa-sun fa-4x"></i><p class="logo_content">Yellow Tribe</p></div>
        
        <div class="d-flex">

            <p class="pl-2"><a href="{{ path('calendar') }}" class="btn btn-outline-warning btn-lg" role="button">Calendrier</a></p>

            <a href="{{ path('profile_index') }}" class="fa_profile"><i class="fas fa-user fa-3x pl-3"></i></a>

            <a href="{{ path('app_logout') }}" class="fa_logout"><i class="fas fa-power-off fa-3x pl-3"></i></a>
        
        </div>

    </div>

  </div>

{% endblock %}

{% block body %}

    <p>Vous avez créé {{ events|length }} événements : </p>

    {% for event in events %}
        <p>{{event.title}}<a href="{{ path('event_edit', {'event': event.id}) }}" class="btn btn-outline-warning btn-lg" role="button">Modifier cet événement</a></p>
    {% endfor %}

    <p><a href="{{ path('event_new') }}" class="btn btn-outline-warning btn-lg" role="button"><i class="fas fa-plus"></i> Créer un nouvel événement</a></p>

    <p><a href="{{ path('profile_index') }}" class="btn btn-outline-warning btn-lg" role="button">Retour vers mon profil</a></p>



{% include ('_footer.html.twig') %}

{% endblock %}