{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block header %}

  <div class="pt-2 d-flex justify-content-between align-items-center nav_container">

    <div class="float-left text-center"><i class="fas fa-sun fa-4x"></i><p class="logo_content">Yellow Tribe</p></div>
        
        <div class="d-flex">

            <p class="pl-2"><a href="{{ path('calendar') }}" class="btn btn-outline-warning btn-lg" role="button">Calendrier</a></p>

            <a href="{{ path('profile_index') }}" class="fa_profile"><i class="fas fa-user fa-3x pl-3"></i></a>

            <a href="{{ path('app_logout') }}" class="fa_logout"><i class="fas fa-power-off fa-3x pl-3"></i></a>
        
        </div>

    </div>

  </div>

{% endblock %}

{% block body %}

    <a href="{{ path('event_new') }}" class="btn_create-event btn btn-outline-warning btn-lg float-right" role="button"><i class="fas fa-plus"></i> Créer un nouvel événement</a>

<div class="myevents_container">

    <h1 class="display-4 text-center mb-3">MES ÉVÉNEMENTS ({{ events|length }})</h1>

    {% for event in events %}
        <div class="event-detailed_container">
                <div class="event-detailed_section d-flex">

                    <div class="event-date font-weight-bold text-center pr-4">
                        <div class="event-date_day">{{ event.beginingDate|localizeddate('none', 'none', 'fr', null, 'EEEE') }}</div>
                        <div class="event-date_number">{{ event.beginingDate|localizeddate('none', 'none', 'fr', null, 'd') }}</div>
                        <div class="event-date_month">{{ event.beginingDate|localizeddate('none', 'none', 'fr', null, 'MMMM') }}</div>
                    </div>

                    <div>
                        <div class="event-title display-4">{{ event.title }}</div>
                        <div class="d-flex">
                            <div class="event-author pr-1">Organisé par {{ event.user.username }} |</div>
                            <div class="event-category"><i class="fas fa-dot-circle"></i> {# {{ event.category }} #}</div>
                        </div>
                    </div>

                    <div class="">
                        <a href="{{ path('event_edit', {'event': event.id}) }}" class="btn btn-outline-warning btn-lg" role="button"><i class="far fa-edit"></i></a>
                    </div>
                </div>

                <div class="event-detailed_section">
                    {% if event.endingDate is empty %}

                        <div class="mb-2"><i class="fas fa-calendar-alt pr-2"></i> le {{ event.beginingDate|localizeddate('none', 'none', 'fr', null, 'EEEE d MMMM') }} à {{ event.beginingDate|date('H') }}h{{ event.beginingDate|date('i') }}</div>

                    {% else %}

                        <div class="mb-2"><i class="fas fa-calendar-alt pr-2"></i> du {{ event.beginingDate|localizeddate('none', 'none', 'fr', null, 'EEEE d MMMM') }} au {{ event.endingDate|localizeddate('none', 'none', 'fr', null, 'EEEE d MMMM') }}</div>

                    {% endif %}

                    <div><i class="fas fa-map-marker-alt pr-2"></i> {{ event.place }}</div>               
                </div>

                <div class="event-detailed_section">{{ event.description }}</div>


        </div>
    {% endfor %}

</div>


{% include ('_footer.html.twig') %}

{% endblock %}